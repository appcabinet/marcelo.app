---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import AppHeader from '../components/AppHeader.astro';
import AppFooter from '../components/AppFooter.astro';
import NoteList from '../components/note/NoteList.astro';

// Get all notes and sort them by published date (newest first)
const notes: CollectionEntry<'notes'>[] = (await getCollection('notes')).sort(
  (a, b) => b.data.published.valueOf() - a.data.published.valueOf()
);

// Get the latest note
const latestNote = notes[0];
const otherNotes = notes.slice(1);

// Format date to match the note page style
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: '2-digit',
    day: 'numeric'
  }).replace(/\//g, ' Â· ');
}
---

<html lang="en">
  <head>
    <BaseHead 
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
    />
    <style>
      .index-container {
        max-width: 680px;
        margin: 0 auto;
      }

      .index-header {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
      }

      @media (max-width: 720px) {
        .index-header {
        }
      }

      .index-header .title {
        font-size: 1.3rem;
        line-height: 1.1;
        color: var(--text);
        font-weight: 600;
        margin: 0;
        margin-top: 2rem;
        margin-bottom: 2rem;
      }

      .index-header .description {
        font-size: 1.2rem;
        line-height: 1.3;
        text-align: left;
        text-wrap: normal;
        color: var(--text-light);
      }

      
      .section-title {
        font-size: 1.2rem;
        color: var(--text);
        margin: 0;
        margin-top: 2rem;
        margin-bottom: 2rem;
        font-weight: 500;
        opacity: 0.8;
        letter-spacing: -0.01em;
      }

      .index-divider {
        height: 1px;
        background-color: var(--background-core-dark);
        margin: 3rem 0;
      }
    </style>
  </head>
  <body>
    <main>
      <section class="index-container">
        <AppHeader />
        <div class="index-header">
          <h1 class="title">Marcelo Mantilla</h1>
          <p class="description">
            Hey! I'm Marcelo, a product engineer and creative writer based out of Toronto.
            You've landed on my digital notebook, where I write notes, articles, and essays about things that interest me.
          </p>
        </div>

        <!-- <h2 class="section-title">Latest</h2>
        <div class="latest-note">
          <p class="date">{formatDate(latestNote.data.published)}</p>
          <h2>
            <a href={`/${latestNote.id}`}>{latestNote.data.title}</a>
          </h2>
          {latestNote.data.description && (
            <p class="description">{latestNote.data.description}</p>
          )}
        </div> -->

        <div class="index-section">
          <h2 class="section-title">Notes</h2>
          <NoteList notes={otherNotes} />
        </div>

        <div class="index-divider" />
        <AppFooter />
      </section>
    </main>
  </body>
</html>
