---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import AppHeader from '../components/AppHeader.astro';
import AppFooter from '../components/AppFooter.astro';
import NoteList from '../components/note/NoteList.astro';
import LatestNote from '../components/note/LatestNote.astro';

// Get all notes and sort them by published date (newest first)
const notes: CollectionEntry<'notes'>[] = (await getCollection('notes')).sort(
  (a, b) => b.data.published.valueOf() - a.data.published.valueOf()
);

// Get the latest note
const latestNote = notes[0];
const otherNotes = notes.slice(1);

// Format date to match the note page style
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: '2-digit',
    day: 'numeric'
  }).replace(/\//g, ' · ');
}
---

<html lang="en">
  <head>
    <BaseHead 
      title={SITE_TITLE}
      description={SITE_DESCRIPTION}
    />
    <style>
      .index-container {
        max-width: 680px;
        margin: 0 auto;
      }

      .index-header {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
      }

      .index-header .title {
        font-size: 1.65rem;
        line-height: 1.1;
        color: var(--text);
        font-weight: 600;
        margin: 0;
        margin-top: 3rem;
        margin-bottom: 3rem;
      }

      .index-header .description {
        font-size: 1.2rem;
        line-height: 1.3;
        text-align: left;
        text-wrap: normal;
        color: var(--text-light);
        margin: 0;
      }

      @media (max-width: 720px) {
        .index-header .title {
          font-size: 1.5rem;
        }

        .index-header .description {
          font-size: 1.1rem;
        }
      }

      
      .section-title {
        font-size: 1.2rem;
        color: var(--text);
        margin: 0;
        margin-top: 2rem;
        margin-bottom: 2rem;
        font-weight: 400;
        opacity: 0.8;
        letter-spacing: -0.01em;
      }

      .index-divider {
        height: 1px;
        background-color: var(--background-core-dark);
        margin: 3rem 0;
      }
    </style>
  </head>
  <body>
    <main>
      <section class="index-container">
        <AppHeader />
        <div class="index-header">
          <h1 class="title">Marcelo Mantilla</h1>
          <p class="description">
            Product engineer, designer, and writer shifting between Houston ↔ Toronto. Passionate about building 0-1 products and crafting things people love.
            You can read more about me <a href="/about">here</a>.
          </p>
        </div>

        <div class="index-divider" />

        <div class="index-section">
          <LatestNote note={latestNote} />
        </div>

        <div class="index-divider" />

        <div class="index-section">
          <h2 class="section-title">My Writing</h2>
          <NoteList notes={otherNotes} />
        </div>

        <div class="index-divider" />

        <AppFooter />
      </section>
    </main>
  </body>
</html>
