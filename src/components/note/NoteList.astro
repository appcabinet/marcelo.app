---
import type { CollectionEntry } from 'astro:content';

interface Props {
  notes: CollectionEntry<'notes'>[];
}

const { notes } = Astro.props;

// Format date to match the note page style
function formatDate(date: Date): string {
  const d = new Date(date);
  const year = d.getFullYear();
  const month = String(d.getMonth() + 1).padStart(2, '0');
  const day = String(d.getDate()).padStart(2, '0');
  return `${year}·${month}·${day}`;
}

function formatReadingTime(readingTime: string | undefined): string {
  if (!readingTime) return '';
  return readingTime.replaceAll(' ', '').replace('min', 'm');
}
---
<style>
  .notes-list {
    margin: 1rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .note-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    min-width: 0;
  }

  .note-item .left {
    display: flex;
    align-items: center;
    column-gap: 1rem;
    row-gap: 0.4rem;
    line-height: 1.2;
    flex: 1;
    min-width: 0;
    overflow: hidden;
  }

  @media (max-width: 720px) {
    .notes-list {
      gap: 0.40rem;
    }
    .note-item {
      align-items: flex-start;
    }
    .note-item .left {
      flex-direction: column-reverse;
      align-items: flex-start;
      width: 100%;
    }
    .note-item .left .date {
      display: none;
    }
    .note-item .left .title {
      font-size: 1.1rem;
      width: 100%;
    }
    .note-item .title::before {
      content: "▪";
      margin-left: 0.4rem;
      margin-right: 0.8rem;
      color: var(--text-light);
    }
    .note-item .reading-time {
      font-size: 0.9rem;
    }
  }

  .note-item .date {
    font-family: 'Geist Mono', monospace;
    font-size: 0.98rem;
    color: var(--text-light);
    width: 6.2rem;
    opacity: var(--opacity-light);
  }

  .note-item .title {
    font-size: var(--text-size-default);
    font-weight: 400;
    color: var(--text-dark);
    text-decoration: none;
    position: relative;
    flex: 1;
    min-width: 0;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .note-item .title:hover {
    color: var(--accent);
  }

  .note-item .reading-time {
    font-size: 1rem;
    font-family: 'Geist Mono', monospace;
    line-height: 1;
    letter-spacing: -0.02em;
    color: var(--text-light);
    opacity: var(--opacity-light);
    white-space: nowrap;
    margin-left: 0.5rem;
  }

  .reading-time .mobile {
    display: none;
  }

  @media (max-width: 720px) {
    .reading-time .desktop {
      display: none;
    }
    .reading-time .mobile {
      display: inline;
      font-size: 0.9rem;
    }
  }
</style>

<div class="notes-list">
  {notes.map((note) => (
    <div class="note-item">
      <div class="left">
        <span class="date">{formatDate(note.data.published)}</span>
        <a href={`/${note.id}`} class="title">{note.data.title}</a>
      </div>
      <span class="reading-time desktop">{note.data.readingTime}</span>
      <span class="reading-time mobile">{formatReadingTime(note.data.readingTime)}</span>
    </div>
  ))}
</div>

